{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build server",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"server.cpp",
				"common.cpp",
				"-o",
				"server"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "build client",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"client.cpp",
				"common.cpp",
				"-o",
				"client"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}